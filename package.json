{
	"name": "@elysium/monorepo",
	"version": "1.0.0",
	"private": true,
	"workspaces": {
		"packages": [
			"@elysiumjs/*",
			"create-elysium",
			"example"
		],
		"catalog": {
			"radash": "^12.1.1",
			"reflect-metadata": "^0.2.2"
		}
	},
	"packageManager": "bun@1.3.9",
	"scripts": {
		"build": "turbo build",
		"build:js": "turbo build:js",
		"build:types": "turbo build:types",
		"test": "turbo test",
		"test:coverage": "turbo test:coverage",
		"lint": "turbo lint",
		"typecheck": "turbo typecheck",
		"clean": "turbo clean && rm -rf node_modules",
		"dev": "turbo dev --filter='@elysiumjs/*'",
		"format": "bun run --filter='@elysiumjs/*' format",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.0",
		"@changesets/changelog-github": "^0.5.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@types/bun": "^1.2.23",
		"@types/node": "^24.6.2",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"turbo": "^2.8.0",
		"type-fest": "^5.0.1",
		"typescript": "^5.9.3"
	}
}

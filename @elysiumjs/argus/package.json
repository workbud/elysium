{
  "name": "@elysiumjs/argus",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "description": "OpenTelemetry telemetry package for the Elysium.js framework.",
  "private": false,
  "author": "Workbud Technologies Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/workbud/elysium"
  },
  "keywords": [
    "elysium",
    "framework",
    "telemetry",
    "opentelemetry",
    "tracing",
    "observability",
    "typescript",
    "bun"
  ],
  "homepage": "https://github.com/workbud/elysium",
  "module": "index.ts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "./src/sdk.ts"
  ],
  "scripts": {
    "format": "prettier --write \"./src/**/*.ts\"",
    "clean": "rimraf dist",
    "build:js": "bun build ./src/index.ts --outdir ./dist --target bun -e @elysiumjs/* -e @opentelemetry/* --root ./src --minify",
    "build:ts": "tsc",
    "build": "bun run clean && bun run build:js && bun run build:ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/sdk-trace-base": "^1.30.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/resources": "^1.30.0",
    "@opentelemetry/semantic-conventions": "^1.30.0"
  },
  "devDependencies": {
    "@elysiumjs/core": "workspace:*",
    "@elysiumjs/hermes": "workspace:*"
  },
  "peerDependencies": {
    "@elysiumjs/core": "workspace:^",
    "@elysiumjs/hermes": "workspace:^"
  },
  "peerDependenciesMeta": {
    "@elysiumjs/hermes": {
      "optional": true
    }
  }
}
